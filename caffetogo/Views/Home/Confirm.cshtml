@model caffetogo.Models.UserRegister
@{
    ViewData["Title"] = "Hitelesítés";
}
<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" src="~/favicon.ico">
</head>
<body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <img src="~/logo.png">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                @*Hitelesítő methódus meghívása*@
                                <form id="register-form" method="post" role="form">
                                    <div class="text-danger"></div>
                                    <div class="form-group">
                                        <input type="email" style="visibility:hidden" name="Email" id="email" class="form-control" value=@Model.Email>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="submit" asp-action="CreateUser2" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Hitelesítés">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" style="visibility:hidden" name="Password" id="password" class="form-control" value=@Model.Password>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>