@model IEnumerable<caffetogo.Models.Buy>
@{
    ViewData["Title"] = "AdminBuy";
}
<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Admin.css">
</head>
<body>
    <div>
        <table>
            <tr>
                <td class="ht"><img src="~/logo.png" width="200px" height="200px"></td>
                <td class="ht"><a asp-controller="Home" asp-action="AdminUser" class="headlink">User</a></td>
                <td class="ht"><a asp-controller="Home" asp-action="AdminProduct" class="headlink">Product</a></td>
                <td class="ht"><a asp-controller="Home" asp-action="Index" class="headlink">Index</a></td>
            </tr>
        </table>
    </div>
    @if (Model.Count() > 0)
    {
        <div class="main">
            <table>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        UserID
                    </th>
                    <th>
                        Items
                    </th>
                    <th>

                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (Buy item in Model)
                {
                    <form method="post">
                    <tr>
                        <td>
                            <input name="Id" type="number" value=@item.Id>
                        </td>
                        <td>
                            <input name="UserId" type="text" value=@item.UserId>
                        </td>
                        <td>
                            <input name="Items" type="text" value=@item.Items>
                        </td>
                        <td class="sendlink">
                            <input type="submit" value="Delete" asp-action="DeleteAdminBuy">
                        </td>
                        <td class="sendlink">
                            <input type="submit" value="Update" asp-action="UpdateAdminBuy">
                        </td>
                    </tr>
                    </form>
                }
            </table>
        </div>
    }
    <div>
        <form method="post" asp-action="CreateAdminBuy">
            <table>
                <tr>
                    <th>
                        UserID
                    </th>
                    <th>
                        Items
                    </th>
                    <th>
                    </th>
                </tr>
                <tr>
                    <td>
                        <input name="UserId" type="text" />
                    </td>
                    <td>
                        <input name="Items" type="text" />
                    </td>
                    <td class="sendlink">
                        <input type="submit" value="Create">
                    </td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>