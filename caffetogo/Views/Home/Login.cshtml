@{
    ViewData["Title"] = "Belépés";
}
@model caffetogo.Models.Logins
<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="icon" src="~/favicon.ico">
</head>
<body class='movingBackground'>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <img src="~/logo.png" width="100%" height="100%">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <a href="#" class="active" id="login-form-link">Belépés</a>
                        </div>
                        <div class="col-xs-6">
                            <a href="#" id="register-form-link">Regisztráció</a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            @*Bejelentkezés (Loginok fügvény)*@
                            <form id="login-form" method="post" role="form" style="display: block;">
                                    <input type="hidden" name="cart" class="form-control" value=@Model.bucket>
                                <div class="form-group">
                                    <input type="email" name="email" tabindex="1" class="form-control" placeholder="E-mail cím" value=@Model.email>
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" tabindex="2" class="form-control" placeholder="Jelszó">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" asp-action="Loginok" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Belépés">
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    @*Ellfelejtett jelszó (Forgottenpassword1 fügvény)*@
                                    <input type="submit" id="forgottenpassword" asp-action="Forgottenpassword1" value="Elfelejtett jelszó-Email küldése">
                                </div>
                            </form>
                            @*Regisztráció (CreateUser fügvény)*@
                            <form id="register-form"  method="post" role="form" style="display: none;">
                                <div class="text-danger" ></div>
                                    <input type="hidden" name="cart" class="form-control" value=@Model.bucket>
                                <div class="form-group">                                 
                                    <input  type="email" name="Email"  tabindex="1" class="form-control"  placeholder="E-mail cím" value="">                                    
                                </div>
                                <div class="form-group">
                                    <input type="password" name="Password"  required tabindex="3" class="form-control"  placeholder="Jelszó">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="confirmpassword"  required tabindex="4" class="form-control"  placeholder="Jelszó újra">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" asp-action="CreateUser"   name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Regisztráció">
                                        </div>
                                    </div>
                                </div>
                            </form>
                            @*Ugrás a Privacy oldalra*@
                            <a id="privacy" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/login.js"></script>
</body>
</html>