@model caffetogo.Models.Fpw
@{
    ViewData["Title"] = "Elfelejtett jelszó";
}
<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" src="~/favicon.ico">
</head>
<body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <img src="~/logo.png">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                @*Elfelejtett jelszó methódus meghívása*@
                                <form id="register-form" method="post" role="form" style="display: block;">
                                    <div class="text-danger"></div>
                                    <div class="form-group">
                                        <input type="password" name="password" id="password" class="form-control" placeholder="Jelszó">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="confirmpassword" id="password" class="form-control" placeholder="Jelszó újra">
                                    </div>
                                    <input type="hidden" name="id" id="email" value=@Model.id>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="submit" asp-action="UpdateUser" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Jelszó módosítás">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>