@model IEnumerable<caffetogo.Models.UserView>
@{
    ViewData["Title"] = "AdminUser";
}
<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Admin.css">
</head>
<body>
    <div>
        <table>
            <tr>
                <td class="ht"><img src="~/logo.png" width="200px" height="200px"></td>
                <td class="ht"><a asp-controller="Home" asp-action="AdminBuy" class="headlink">Buy</a></td>
                <td class="ht"><a asp-controller="Home" asp-action="AdminProduct" class="headlink">Product</a></td>
                <td class="ht"><a asp-controller="Home" asp-action="Index" class="headlink">Index</a></td>
            </tr>
        </table>
    </div>
    @if (Model.Count() > 0)
    {
        <div class="main">
            <table>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Password
                    </th>
                    <th>
                        Activity
                    </th>
                    <th>
                    </th>
                    <th>
                    </th>
                </tr>
                @foreach (UserView item in Model)
                {
                    <form method="post">
                    <tr>
                        <td>
                            <input name="Id" type="number" value=@item.Id>
                        </td>
                        <td>
                            <input name="Email" type="email" value=@item.Email>
                        </td>
                        <td>
                            <input name="Password" type="text" value=@item.Password>
                        </td>
                        <td>
                            <input name="Activity" type="datetime-local" value=@item.Activity.ToString("yyyy-MM-ddTHH:mm")>
                        </td>
                        <td class="sendlink">
                            <input type="submit" value="Delete" asp-action="DeleteAdminUser">
                        </td>
                        <td class="sendlink">
                            <input type="submit" value="Update" asp-action="UpdateAdminUser">
                        </td>
                    </tr>
                    </form>
                }
            </table>
        </div>
    }
    <div>
        <form method="post" asp-action="CreateAdminUser">
            <table>
                <tr>
                    <th>
                        Email
                    </th>
                    <th>
                        Password
                    </th>
                    <th>
                    </th>
                </tr>
                <tr>
                    <td>
                        <input name="Email" type="email" />
                    </td>
                    <td>
                        <input name="Password" type="text" />
                    </td>
                    <td class="sendlink">
                        <input type="submit" value="Create">
                    </td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>